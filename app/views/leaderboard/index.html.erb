
<h1 class="center" ><b>Beers earned in last 24hrs</b></h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Beers earned</th>
    <th>Calories</th>
  </tr>
  </thead>

  <tbody>
  <% @leaderboard.each do |l| %>
      <tr>
        <td><%= image_tag l.img_url, class: "img-circle" %></td>
        <td><%= link_to l.athlete_name, @athlete_url + l.athlete_id.to_s, class: "strava-profile" %></td>
        <td>
          <% if l.beers.floor > 10 %>
              <b><%= l.beers.floor %></b> &#x1F37A
          <% else %>
              <% l.beers.floor.times do |count| %>
                <% if count % 5 == 0 %>
                    <br>
                <% end %>
                &#x1F37A <!--beer emoji-->
              <% end %>
          <% end %>
        </td>
        <td><%= l.calories.floor %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= debug(@leaderboard) if Rails.env.development? %>